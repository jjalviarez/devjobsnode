<main class="lista-vacantes">
    <h2>Navegacion</h2>
    <div class="botones separador">
        <a href='/editar-perfil' class='btn btn-azul'>Edita Tu Perfil</a>
        <a href='/vacantes/nueva' class='btn btn-verde'>Nueva Vacante</a>    
    </div>
    
    <h2>Lista Vacantes</h2>
    {{#if vacantes}}
        {{#each vacantes}}
            <div class="vacante">
                <div class="caja">
                    <h3>{{this.empresa}}</h3>
                    <p class='puesto'>{{this.titulo}}</p>
                </div>
                <div class="caja">
                    <p class='etiqueta'>Ubicacion</p>
                    <p class='nombre'>{{this.ubicacion}}</p>
                </div>
                <div class="caja">
                    <p class='etiqueta'>Contrato</p>
                    <p class='nombre contrato'>{{this.contrato}}</p>
                </div>
                <div class="caja centrar-vertical">
                    <a href='/vacante/{{this.url}}' class="btn btn-verde">Mas info</a>
                </div>
            </div>
        {{/each}}
    {{else}}
        <p>No hay Vacantes</p>
    {{/if}}
</main>